<%= form_for(@post) do |f| %>
<h1>Edit View</h1>

  <div class="field">
    <%= f.label :title %><br />
    <%= f.text_field :title %>
  </div>
  <div class="field">
    <%= f.label :content %><br />
    <%= f.text_area :content %>
  </div>
  <div class="actions">
    <%= f.submit %>
  </div>



<%=link_to 'Show',@post%>
<%=link_to 'Back',posts_path%>
<% end %>